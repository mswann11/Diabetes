<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true"
    android:background="#E0F2F1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/myth_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Myth or Fact?"
            android:padding="24dp"
            android:textColor="#009688"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:layout_marginHorizontal="75dp"
            android:max="50"
            android:progress="10"
            android:layout_below="@id/myth_title"/>

        <TextView
            android:id="@+id/myth_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diabetes myth or fact #1."
            android:padding="24dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@id/progress_bar"
            android:layout_marginTop="50dp"
            android:textColor="#000"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/blank"
            android:rotation="355"/>

        <LinearLayout
            android:id="@+id/myth_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/myth_text"
            android:layout_marginTop="24dp">
            <Button
                android:id="@+id/myth1_myth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Myth"
                android:layout_margin="32dp"
                android:background="#C62828"
                android:textColor="#FFF"
                android:textSize="16sp" />
            <Button
                android:id="@+id/myth1_fact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fact"
                android:layout_margin="32dp"
                android:background="#2E7D32"
                android:textColor="#FFF"
                android:textSize="16sp" />
        </LinearLayout>
        <Button
            android:id="@+id/next_myth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next >>"
            android:layout_margin="32dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:layout_below="@id/myth_buttons"
            android:layout_centerHorizontal="true"
            android:onClick="myth_2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_icon_small"
            android:onClick="main"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Main Page"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="16dp"/>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>
